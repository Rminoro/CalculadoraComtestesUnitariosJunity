package FontesDeOperacoesTeste;

import static org.junit.Assert.*;

import br.com.fiap.calculadora.main.*;

import br.com.fiap.calculadora.model.*;

import org.junit.Test;

public class CalculadoraTeste {

	Calculadora calc = new Calculadora();
	
	
	@Test
	public void testeSomar5Com3() {
		int resultado = calc.somar(5, 3);
		assertEquals(resultado, 8);
	}
	@Test
	public void testeSomar3Com3() {
		int resultado = calc.somar(3, 3);
		assertEquals(resultado, 6);
	}
	@Test
	public void testeSubtrair5Com3() {
		int resultado = calc.subtrair(5, 3);
		assertEquals(resultado, 2);
	}
	@Test
	public void testeMultiplicar5Com3() {
		int resultado = calc.multiplicar(5, 3);
		assertEquals(resultado, 15);
	}
	@Test
	public void testeDividir15Com3() {
		int resultado = calc.dividir(15, 3);
		assertEquals(resultado, 5);
	}
	
}
